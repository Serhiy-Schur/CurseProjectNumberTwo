<!DOCTYPE html>
<html>
<head>
    <title>Меню</title>
    <meta charset="utf-8" />
    <link href="/style_zapyt.css" rel="stylesheet" type="text/css">
</head>
<body>
<div class="navbar">
    <div><a class="navbar__btn__back" href="/Stuard">Назад</a></div>
</div>
<h1>Меню</h1>
<div class="search">
        <input class="search_input" type="text" name="content" placeholder="Номер меню">
        <input class="search_input" type="text" name="content2" placeholder="Тип меню">
        <input type="button" value="Знайти" onclick="search_generate_url('Menu')">
</div>
<table>
    <tr><th>Номер меню</th><th>Кількість напоїв</th><th>Кількість страв</th><th>Тип меню</th><th>Ціна</th></tr>
    {{#each users}}
        <tr>
            <td>{{this.Номер_меню}}</td>
            <td>{{this.Кількість_напоїв}}</td>
            <td>{{this.Кількість_страв}}</td>
            <td>{{this.Тип_меню}}</td>
            <td>{{this.Ціна}}</td>
        </tr>
    {{/each}}
</table>
</body>
<script>
    function search_generate_url(type) {
        let search_content = document.getElementsByName('content')[0].value
        let search_content2 = document.getElementsByName('content2')[0].value
        let url = '/' + type + '/' + search_content+ '/' + search_content2;
        location.assign(url);
    }
</script>
</html>